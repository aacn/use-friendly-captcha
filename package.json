{
  "name": "@aacn/use-friendly-captcha",
  "description": "FriendlyCaptcha React Implementation",
  "author": "AACN Software- und Systementwicklung GmbH",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:aacn/use-friendly-captcha.git"
  },
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": "1.x"
  },
  "browserslist": [
    "last 3 versions",
    "> 1%"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index",
  "types": "src/src/components/Friendly-captcha/types/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "build:watch": "rollup -c -w",
    "playground": "cd playground && yarn start",
    "install:frozen": "yarn install --frozen-lockfile",
    "install:all:frozen": "yarn install --frozen-lockfile && cd playground && yarn install --frozen-lockfile",
    "dev": "npm-run-all --parallel build-watch playground",
    "test": "jest",
    "generate": "plop",
    "prepare": "husky install",
    "pre-format": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --config .prettierrc.json --write"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/playground/"
    ],
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  },
  "keywords": [
    "friendly",
    "captcha",
    "package",
    "react",
    "react-hooks",
    "react-component"
  ],
  "resolutions": {
    "**/@types/node": "^18.7.13"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.0.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.242",
    "@swc/jest": "^0.2.23",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "friendly-challenge": "^0.9.5",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "plop": "^3.0.5",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "rollup": "^2.78.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-flat-dts": "^2.0.0",
    "rollup-plugin-prettier": "^2.2.2",
    "rollup-plugin-swc3": "^0.3.0",
    "rollup-plugin-tsconfig-paths": "^1.3.0",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8"
  }
}
